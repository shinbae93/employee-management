@model List<Department>
@{
    ViewData["Title"] = "Create Employee";
    var departments = Model;
}
<div class="container">
    <div class="row ">
        <h1 class="text-center text-info">Create Employee</h1>
    </div>
    <form asp-controller="Employee" asp-action="Save" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label for="Name">Name</label>
            <input class="form-control" id="Name" name="Name">
        </div>
        <div class="mb-3">
            <label for="Gender">Gender</label>
            <input type="radio" value="Male" id="Gender" name="Gender" />Male
            <input type="radio" value="Female" id="Gender" name="Gender" />Female
        </div>
        <div class="mb-3">
            <label for="Email">Email</label>
            <input class="form-control" id="Email" name="Email">
        </div>
        <div class="mb-3">
            <label for="PhoneNumber">Phone Number</label>
            <input class="form-control" id="PhoneNumber" name="PhoneNumber">
        </div>
        <div class="mb-3">
            <label for="DepartmentId">Department</label>
            <select class="form-control" id="DepartmentId" name="DepartmentId">
                @foreach (var item in departments){
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="text-center ">
            <div class="w-25 btn-group">
                <input class="btn btn-success mx-2" type="submit" name="submit" value="Save" />
                <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary mx-2">
                    <i class="fas fa-edit">Back</i>
                </a>
            </div>
        </div>
    </form>
</div>
