@model List<Employee>;
@{
    ViewData["Title"] = "Employee Page";
    var employees = Model;
}
<div class="text-center">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-info">Employee List</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Employee" asp-action="Create" asp- class="btn btn-info">
        Create
      </a>
    </div>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Gender</th>
        <th scope="col">Email</th>
        <th scope="col">PhoneNumber</th>
        <th scope="col">Department</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in employees)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Name</td>
          <td>@(item.Gender ? "Male" : "Female")</td>
          <td>@item.Email</td>
          <td>@item.PhoneNumber</td>
          <td>@item.Department.Name</td>
          <td>
            <div class="w-75 btn-group" role="group">
              <a asp-route-Id="@item.Id" asp-action="Get" asp-controller="Employee" class="btn btn-primary mx-2 bg-color-infosuccess bg-color-info-hover">
                Update
              </a>
              <a asp-route-Id="@item.Id" asp-action="Delete" asp-controller="Employee" class="btn btn-danger mx-2 bg-color-pinkdanger bg-color-pinkdanger-hover">
                Delete
              </a>
            </div>
          </td>
        </tr>
      }   
    </tbody>
  </table>
</div>